@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron bg-eventures w-75 mx-auto">
    @if (!this.User.Identity.IsAuthenticated)
    {
        <h1>Eventures - The best ticket service in the world</h1>

        <hr class="hr-2 bg-dark" />

        <h3 class="mt-4"><a href="Identity/Account/Login">Login</a> to start "eventing"</h3>
        <h3 class="mt-4"><a href="Identity/Account/Register">Register</a> if you don't have an account</h3>
    }
    else if (this.User.IsInRole("User"))
    {
        <div class="d-flex justify-content-center">
            <h1>Welcome, @User.Identity.Name</h1>
        </div>
        <hr class="hr-2 bg-light" />

        <div class="d-flex justify-content-center">
            <h3  class="text-black-50">Eventures wishes you an exciting experience.</h3>
        </div>
    }
    else if (this.User.IsInRole("Admin"))
    {

        <div class="d-flex justify-content-center">
            <h1>Greetings, Administrator - @User.Identity.Name</h1>
        </div>

        <hr class="hr-2 bg-light" />
        <div class="d-flex justify-content-center">
            <h3 class="text-black-50">Enjoy your work.</h3>
        </div>
    }
</div>