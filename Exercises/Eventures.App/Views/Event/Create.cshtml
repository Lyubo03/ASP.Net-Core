@model Eventures.App.Models.Event.EventBindingModel
@{
    ViewData["Title"] = "Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1 class="text-center mt-3 h-1">Create Event</h1>
</div>
<hr class="bg-eventures hr-2" />

<form method="post" class="w-45 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bold"></label>
            </div>
            <input type="text" asp-for="Name" min="10" class="form-control" placeholder="Led Zeppelin - You can't have enough">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Place" class="font-weight-bold"></label>
            </div>
            <input type="text" asp-for="Place" class="form-control" placeholder="Sofia Bulgaria..">
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-eventures">

    <div class="d-flex justify-content-between">

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Start" class="font-weight-bold"></label>
            </div>
            <input type="datetime-local" asp-for="Start" class="form-control" placeholder="20-Jul-2021 22:00">
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="End" class="font-weight-bold"></label>
            </div>
            <input type="datetime-local" asp-for="End" class="form-control" placeholder="20-Aug-2021 5:00">
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-eventures">

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center ">
                <label asp-for="TotalTickets" class="font-weight-bold"></label>
            </div>
            <input type="number" min="1" asp-for="TotalTickets" class="form-control" placeholder="30000">
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="PricePerTicket" class="font-weight-bold"></label>
            </div>
            <input type="number" min="0.00" asp-for="PricePerTicket" class="form-control" placeholder="399.99">
            <span asp-validation-for="PricePerTicket" class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-eventures">
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Create Event</button>
    </div>
</form>