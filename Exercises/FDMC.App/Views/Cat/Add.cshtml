@model FDMC.App.Models.CatBindingModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Cat</h1>

<form asp-controller="Cat" asp-action="Add" method="post">

    <label asp-for="Name">Name: </label>
    <input type="text" asp-for="Name" placeholder="Name.."><br />

    <label asp-for="Age">Age: </label>
    <input type="text" asp-for="Age" min="0" placeholder="Age.."><br />

    <label asp-for="Breed">Breed: </label>
    <input type="text" asp-for="Breed" placeholder="Breed.."><br />

    <label asp-for="ImageUrl">ImageUrl: </label>
    <input type="text" asp-for="ImageUrl" placeholder="ImageUrl.."><br />
     
    <input type="submit" value="Submit" />
</form>